<h1>Index</h1>

<%= link_to "Create a new task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= link_to task.name, task_path(task) %>
    <%= link_to "edit", edit_task_path(task) %>
    <%= link_to 'remove', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?'} %>
    <%= task.status %>
    <%= task.created_at %>

  </li>
  <% end %>
</ul>

